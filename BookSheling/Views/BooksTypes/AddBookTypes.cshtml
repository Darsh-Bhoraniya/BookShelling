@model BookSheling.Models.Books_TypesModel

@{
    ViewData["Title"] = "AddBookTypes";
}

<h1>AddBookTypes</h1>

<h4>Book_Type</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Post" asp-controller="BooksTypes">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                @Html.HiddenFor(x => x.TypeID)
            </div>
            <div class="form-group">
                <label asp-for="TypeName" class="control-label"></label>
                <input asp-for="TypeName" class="form-control" />
                <span asp-validation-for="TypeName" class="text-danger"></span>
            </div>
            <div class="d-grid gap-2 mt-3">
                <button type="submit" class="btn btn-primary btn-block">Save</button>
                <a href="@Url.Action("GetAllBooksTypes", "BooksTypes")" class="btn btn-secondary btn-block mt-3">Back to List</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
