@model IEnumerable<BookSheling.Models.Book_Model>

<div class="container">
    <div class="row">
        @foreach (var data in Model)
        {
            <div class="col-md-3 mb-4">
                <div class="card h-100" style="max-width: 400px; border: 1px solid #ccc; border-radius: 10px; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);">
                    <img src="~/img/download.jpg" alt="" class="card-img-top" style="max-width: 100%; height: 200px; object-fit: cover; border-radius: 10px 10px 0 0;">
                    <div class="card-body">
                        <h2 class="card-title">@data.BookName</h2>
                        <p class="card-text lead">@data.BookTitle</p>
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item">Author: @data.BookWiseAuthorID</li>
                            <li class="list-group-item">Type: @data.TypeID</li>
                            <li class="list-group-item">Price: $@data.Price</li>
                            <li class="list-group-item">INSB: @data.INSBN</li>
                            <li class="list-group-item">Published Date: @data.PublishedDate</li>
                            <li class="list-group-item">Created: @data.Created</li>
                            <li class="list-group-item">Modified: @data.Modified</li>
                        </ul>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
